<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.TestMapper">
	<select id="getList" resultType="org.zerock.domain.TestVO">
		SELECT
			id AS id,
			name AS name,
			age AS age
		 FROM tbl_test1
	</select>
	
	<insert id="insert">
		INSERT INTO tbl_test1 (name, age)
		VALUES (#{name}, #{age})
	</insert>
	
	<insert id="insertSelectKey" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		INSERT INTO tbl_test1 (name, age)
		VALUES (#{name}, #{age})
	</insert>
	
	<select id="read" resultType="org.zerock.domain.TestVO">
		SELECT * FROM tbl_test1
		WHERE id = #{id}
	</select>
	
	<delete id="delete">
		DELETE FROM tbl_test1 WHERE id = #{id} 
	</delete>
	
	<update id="update">
		UPDATE tbl_test1
		SET 
			name = #{name},
			age = #{age}
		WHERE
			id = #{id}
	</update>
</mapper>